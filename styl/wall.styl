body
  margin 0
  padding 0

.wall
  background-color #333
  height 0
  padding-bottom 66.25%
  position relative

.inner
  position absolute
  top 0
  left 0
  width: 100%
  height 100%
  display flex
  flex-wrap wrap

.slice
  flex 1 1 25%
  background url(http://evereditor.com/image/1.jpg)
  background-size 400%
  height 33.333333%
  animation: 3s fadeInScale ease-in-out infinite

  for n in 1..12
    &:nth-child({n})
      background-position-x: -100% * ((n - 1) % 4)
      background-position-y: -100% * floor((n - 1) / 4)
      animation-delay: .1s * (n - 1)

@keyframes fadeInScale
  0%
    transform scale(.8)
    opacity 0

  30%
    transform: scale(1)
    opacity: 1

  70%
    transform: scale(1)
    opacity: 1

  100%
    transform: scale(.8)
    opacity: 0